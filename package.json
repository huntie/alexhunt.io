{
  "private": true,
  "engines": {
    "yarn": "^1.22.0"
  },
  "workspaces": [
    "site",
    "scripts/eslint"
  ],
  "scripts": {
    "dev": "yarn --cwd site next dev",
    "build": "yarn --cwd site next build",
    "start": "yarn --cwd site next start",
    "lint": "yarn --cwd site lint",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "^2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "^4.3.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
